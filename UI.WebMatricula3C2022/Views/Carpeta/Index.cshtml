@model IEnumerable<UI.WebMatricula3C2022.Models.Carpeta.Salida.DatosCarpeta>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <br />
    <h2>Gestión de carpeta</h2>
    <div class="container-fluid">
        <br />
        <div style="width:100%; margin:0 auto;">
            <button id='btnAbrirDialogAgregarCarpeta' class="btn btn-primary" style="background-color: #1A2DF3; width:10%">Agregar</button>
            <br /><br />
            <table class="display" id="CarpetasTabla" style="width:100%">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>CodigoCurso</th>
                        <th>Fecha Creacion</th>
                        <th>Nombre</th>
                        <th>VisibleCarpetas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id='Codigo'>
                                @Html.DisplayFor(modelItem => item.Codigo)
                            </td>
                            <td id='CodigoCurso'>
                                @Html.DisplayFor(modelItem => item.CodigoCurso)
                            </td>
                            <td id='FechaCreacion'>
                                @Html.DisplayFor(modelItem => item.FechaCreacion)
                            </td>
                            <td id='Nombre'>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td id='VisibleCarpetas'>
                                @Html.DisplayFor(modelItem => item.VisibleEstudiantes)
                            </td>
                            <td style="align-items:center">
                                <a name="btnEditarCarpeta" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-edit"></i></a>
                                <a name="btnEliminarCarpeta" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div id="modalAgregarCarpeta" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Carpeta</h4>
                </div>
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <div>
                        <label for="exampleInputEmail1">Código de carpeta:</label>
                        <input class="form-control" id="IDAgregarCarpetaCodigo" disabled placeholder="Sin asignar">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Nombre:</label>
                        <input class="form-control" id="IDAgregarCarpetaNombre">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">FechaCreacion</label>
                        <input class="form-control" id="IDAgregarCarpetaFechaCreacion">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">VisibleEstudiantes:</label>
                        <select id="IDAgregarCarpetaVisibleEstudiantes" class="select form-control">
                            <option value="Activo" selected>Visible</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Codigo Curso:</label>
                        <input class="form-control" id="IDAgregarCarpetaCodigoCurso">

                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnCancelarCarpeta' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button id='btnAgregarCarpeta' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
    <div id="modalVentanaExitosa" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>Transacción realizada exitosamente</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnMensajeExitoso' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaEliminarCarpeta" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>¿Está seguro que desea eliminar el estudiante?</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnAceptarEliminarCarpetaConfirmacion' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                    <button id='btnCancelarEliminarCarpetaConfirmacion' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div>
        <div id="canvas-holder" style="width:40%">
            <canvas id="vistas-chart"></canvas>
        </div>
        <script>
            new Chart(document.getElementById("vistas-chart"), {
                type: 'pie',
                data: {
                    labels: @Html.Raw(ViewBag.Etiquetas),
                    datasets: [{
                        label: "Carpetas por estado",
                        backgroundColor: @Html.Raw(ViewBag.Colores) ,
                        data: @Html.Raw(@ViewBag.Valores)
                                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: 'Carpetas por estado'
                    }
                }
            });
        </script>
    </div>









    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @section scripts
        {
        <script src="~/js/Carpeta.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>

    }
    </main>
